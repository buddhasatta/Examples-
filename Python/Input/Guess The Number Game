import sys
import os
import random as rd


def guess_the_game():
    secret_number = rd.randint(0, 10)
    attempt = 0


    while True:
        enter_num = input("Enter the number or press exit ").strip().lower()
        if secret_number == "exit":
            print("The game is over and the secret number is ".format(secret_number))


        try:

            enter_num = int(enter_num)
            attempt += 1

            if not 1 <= enter_num <= 10:
                print("please enter a number between 0 and 10")
                continue

            if secret_number == enter_num:
                print("You guessed it correct in {} attempt".format(attempt))
                print("The number was indeed {}".format(secret_number))
                break

            elif enter_num < secret_number:
                print("Too low try a higher number".title())
            else:  # must be enter_num greater than secret_number
                print("Too High come Low".title())

        except ValueError:
            print("Invalid input")

if __name__=="__main__":
    guess_the_game()
